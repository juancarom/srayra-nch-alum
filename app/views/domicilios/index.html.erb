<h1>Listing domicilios</h1>

<table>
  <tr>
    <th>Localidad</th>
    <th>Calle</th>
    <th>Numero</th>
    <th>Piso</th>
    <th>Dpto</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @domicilios.each do |domicilio| %>
  <tr>
    <td><%= domicilio.localidad_id %></td>
    <td><%= domicilio.calle %></td>
    <td><%= domicilio.numero %></td>
    <td><%= domicilio.piso %></td>
    <td><%= domicilio.dpto %></td>
    <td><%= link_to 'Show', domicilio %></td>
    <td><%= link_to 'Edit', edit_domicilio_path(domicilio) %></td>
    <td><%= link_to 'Destroy', domicilio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

